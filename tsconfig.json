{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2017"],
    "target": "es2015",
    "module": "nodenext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
